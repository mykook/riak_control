
/*
CSS to be applied ONLY on the cluster page
*/

@import reusable

line()
  fill         : none
  stroke       : red
  stroke-width : 1.5px

#stats-page

  h2
    headline-font()
    font-size : 24px

  svg
    font  : 12px 'titillium'
  
  .line
    line()

  text
    fill : mediumGray
   
  .axis path, .axis line
    fill            : none
    stroke          : lightWhite
    shape-rendering : crispEdges

    &.line
      line()

  
  #stats-area
    margin : 0 auto
    width  : 1100px

  #add-new-graph
    width  : 650px
    margin : 0 auto

  .remove-graph
    float  : left
    cursor : pointer